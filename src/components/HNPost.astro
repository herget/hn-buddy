---
interface Comment {
  author: string;
  comment_text: string;
  created_at: string;
  objectID: string;
  points: number;
  story_id: string;
}

interface Post {
  title: string;
  url: string;
  author: string;
  points: number;
  created_at: string;
  objectID: string;
  num_comments: number;
}

interface Props {
  post: Post;
  topComments: Comment[];
}

const { post, topComments } = Astro.props;

// Format the post URL
const postUrl = post.url || `https://news.ycombinator.com/item?id=${post.objectID}`;
const hnPostUrl = `https://news.ycombinator.com/item?id=${post.objectID}`;
const algoliaItemUrl = `https://hn.algolia.com/?tags=comment,story_${post.objectID}&type=all`;
const algoliaSearchUrl = `https://hn.algolia.com/?tags=story&query=${encodeURIComponent(post.title)}&type=story&sort=byPopularity`;
const hostname = post.url ? new URL(post.url).hostname : 'news.ycombinator.com';
---

<div class="hn-post">
  <div class="post-header">
    <h2 class="post-title">
      <a href={postUrl} target="_blank" rel="noopener noreferrer">{post.title}</a>
      <span class="post-domain">({hostname})</span>
    </h2>
    <div class="post-meta">
      <span class="points">{post.points} points</span> by 
      <a href={`https://news.ycombinator.com/user?id=${post.author}`} target="_blank" rel="noopener noreferrer" class="author-link">{post.author}</a> | 
      <a href={hnPostUrl} target="_blank" rel="noopener noreferrer" class="hn-link">
        <span class="hn-icon">Y</span> {post.num_comments} comments
      </a>
      <div class="api-links">
        <a href={algoliaItemUrl} target="_blank" rel="noopener noreferrer" class="api-link" title="View post in Algolia search">Algolia: Post</a> | 
        <a href={algoliaSearchUrl} target="_blank" rel="noopener noreferrer" class="api-link" title="Search similar stories in Algolia">Algolia: Search</a>
      </div>
    </div>
  </div>
  
  {topComments.length > 0 && (
    <div class="post-comments">
      <h3>Top Comments <span class="comment-count">({topComments.length})</span></h3>
      <ul class="comments-list">
        {topComments.map(comment => (
          <li class="comment">
            <div class="comment-meta">
              <span class="points">{comment.points} points</span> by 
              <a href={`https://news.ycombinator.com/user?id=${comment.author}`} target="_blank" rel="noopener noreferrer" class="author-link">{comment.author}</a>
              <div class="comment-links">
                <a href={`https://news.ycombinator.com/item?id=${comment.objectID}`} 
                  class="hn-link small" 
                  target="_blank" 
                  rel="noopener noreferrer">
                  <span class="hn-icon">Y</span> View on HN
                </a>
                <a href={`https://hn.algolia.com/?tags=comment&query=${comment.objectID}&type=all`}
                  class="api-link small"
                  target="_blank"
                  rel="noopener noreferrer">
                  Algolia
                </a>
              </div>
            </div>
            <div class="comment-text" set:html={comment.comment_text} />
          </li>
        ))}
      </ul>
    </div>
  )}
</div>

<style>
