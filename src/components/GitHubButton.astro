---
// Props for the GitHub button
interface Props {
  repo: string;
  classes?: string;
}

const { repo, classes = '' } = Astro.props;
const repoUrl = `https://github.com/${repo}`;
---

<a href={repoUrl} class={`github-button ${classes}`} target="_blank" rel="noopener noreferrer">
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="github-icon">
    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
  </svg>
  <span>Star on GitHub</span>
</a>

<style>
  .github-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background-color: #24292e;
    color: white;
    border-radius: 4px;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    text-decoration: none;
    transition: background-color 0.2s;
  }
  
  .github-button:hover {
    background-color: #1d2125;
    text-decoration: none;
  }
  
  .github-icon {
    width: 18px;
    height: 18px;
  }
</style> 