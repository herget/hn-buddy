  }
  
  @media (max-width: 640px) {
    .header-container {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .header-actions {
      width: 100%;
    }
    
    .day-nav-inner {
      flex-direction: column;
      gap: 1rem;
    }
    
    .nav-btn {
      width: 100%;
      justify-content: center;
    }
  }
</style> 