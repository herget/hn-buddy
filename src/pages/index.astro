    text-decoration: underline;
  }
  
  .nav-btn {
    display: flex;
    align-items: center;
    background-color: #f5f5f5;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    color: #333;
    font-size: 0.875rem;
    text-decoration: none;
    transition: background-color 0.2s;
  }
  
